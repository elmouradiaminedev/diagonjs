{
  "name": "diagonjs",
  "version": "1.4.0",
  "description": "A library for converting Markdown-style expressions into visually appealing ASCII, Unicode and LaTeX representations.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "url": "git+https://github.com/elmouradiaminedev/diagonjs.git"
  },
  "files": [
    "/dist"
  ],
  "keywords": [
    "Diagon",
    "interpreter",
    "markdown",
    "ascii-art",
    "unicode",
    "latex",
    "math",
    "visualization",
    "interactive",
    "javascript",
    "typescript",
    "npm",
    "package",
    "library",
    "development",
    "tools",
    "programming"
  ],
  "author": "Amine Elmouradi <elmouradi.amine.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:diagon && npm run build:lib -- --watch",
    "build": "npm run build:diagon && npm run build:lib",
    "build:lib": "tsup",
    "build:diagon": "sh ./scripts/diagon/build-diagon.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "format": "prettier --write . --ignore-path .gitignore --ignore-path .prettierignore",
    "lint": "eslint --fix . --ignore-path .gitignore"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "prettier": "^3.2.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2"
  }
}
